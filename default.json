{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchRepositories": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "bump",
        "digest"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}
